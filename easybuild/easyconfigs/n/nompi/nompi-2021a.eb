easyblock = 'Toolchain'

name = 'nompi'
version = '2021a'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '21.5')

dependencies = [
    local_compiler,
    ('CUDA', '11.3', '', SYSTEM),
    ('OpenMPI', '4.1.1', '', local_compiler),
]

moduleclass = 'toolchain'
