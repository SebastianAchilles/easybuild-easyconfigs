easyblock = 'Toolchain'

name = 'nvompic'
version = '2020b'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '21.2')
local_gcc_version = '10.2.0'

dependencies = [
    local_compiler,
    ('CUDA', '11.1.1', '', ('GCC', local_gcc_version)),
    ('OpenMPI', '4.0.5', '', local_compiler),
]

moduleclass = 'toolchain'
